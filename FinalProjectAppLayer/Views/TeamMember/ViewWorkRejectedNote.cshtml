@model BusniessLayer.Entity.Work

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h5 class="m-b-10">Work Attachment </h5>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index"><i class="feather icon-home"></i></a></li>
                    <li class="breadcrumb-item"><a asp-action="AllTeamLeader">Work Details</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- [ sample-page ] start -->
    <div class="col-sm-12 col-lg-12">
        <div class="card">
            <div class="card-body">


                <div>
                    <h4>Work</h4>
                    <hr />
                    <dl class="row border ">

                        <dt class="col-sm-2">
                            Name
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.WorkName)
                        </dd>
                        <dt class="col-sm-2">
                            Descrption
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.WorkDescrption)
                        </dd>  @{
                            if (Model.StateId == 3 || Model.StateId == 2)
                            {

                            }
                            else
                            {
                                <dt class="col-sm-2">
                                    Reject Note
                                </dt>
                                <dd class="col-sm-10">
                                    <span style="color:red">
                                        @Html.DisplayFor(model => model.Rejects.LastOrDefault(x => x.WorkId == model.WorkId).RejectedNote)
                                    </span>
                                </dd>

                            }
                        }
                        <dt class="col-sm-2">
                            Content Type
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.WorkAttachments.LastOrDefault(x => x.WorkId == model.WorkId).ContentType)
                        </dd>
                        <dt class="col-sm-2">
                            Work Attachment
                        </dt>
                        <dd class="col-sm-10">
                            <a href="/TeamMember/ViewAttachment?WorkId=@Model.WorkId" target="_blank">
                                @Model.WorkAttachments.LastOrDefault(x => x.WorkId == Model.WorkId).FileName
                            </a>
                        </dd>
                    </dl>
                </div>
                <div>
                    <a href="@Url.Action("WorkList",new {DutyId=Context.Request.Query["DutyId"]})">Back To WorkList</a>
                </div>
            </div>
        </div>
    </div>
</div>