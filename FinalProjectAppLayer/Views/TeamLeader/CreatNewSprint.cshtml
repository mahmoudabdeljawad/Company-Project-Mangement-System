@using BusniessLayer.Entity
@model Sprint
@{
}
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a><i class="feather icon-home"></i></a></li>
                    <li class="breadcrumb-item"><a>All Project</a></li>
                    <li class="breadcrumb-item"><a>Project Sprints</a></li>
                    <li class="breadcrumb-item"><a href="#">Create Sprints</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- [ horizontal-layout ] start -->
    <div class="col-sm-6">
        <div class="card">

            <div class="card-body">
                <form class="form-group" action="/Teamleader/InsertNewSprint">
                    <div class="form-group">
                        <label asp-for="SprintName">Name</label>
                        <input asp-for="SprintName" class="form-control" />
                        <span asp-validation-for="SprintName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="sprintDescrption"></label>
                        <input asp-for="sprintDescrption" class="form-control" />
                        <span asp-validation-for="sprintDescrption" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate"></label>
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate"></label>
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>

                    </div>
                    <input asp-for="ProjectId" value="@ViewBag.ProjectId" hidden />
                    <input asp-for="StateId" value="3" hidden />

                    <div>
                        <input type="submit" value="Create Sprint" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
